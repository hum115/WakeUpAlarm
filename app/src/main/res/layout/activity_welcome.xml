<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmad.wakeupalarm.Welcome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/AlarmLayout">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set alarm"
            android:id="@+id/start_alarm"
            android:layout_above="@+id/alarmText"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="56dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unset alarm"
            android:id="@+id/stop_alarm"
            android:layout_alignTop="@+id/start_alarm"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Set the alarm clock!"
            android:id="@+id/alarmText"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/start_alarm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min"
            android:id="@+id/textView8"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignStart="@+id/stop_alarm" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HourValue"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginTop="39dp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minValue"
            android:layout_alignTop="@+id/HourValue"
            android:layout_alignStart="@+id/textView8" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/HearRateLayout"
        android:layout_below="@+id/AlarmLayout">

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/ManualHR"
            android:layout_alignTop="@+id/initialHeartRateSwitch"
            android:layout_alignParentEnd="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Initial Heart Rate"
            android:id="@+id/initialHeartRateSwitch"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textOn="True"
            android:checked="false" />
    </RelativeLayout>
</RelativeLayout>
