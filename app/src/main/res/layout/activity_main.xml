<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout"
        android:backgroundTint="#e3b16a">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="#f3df72">

            <Button android:text="Connect"
                android:id="@+id/ButtonConnect"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>

            <Button android:text="Disconnect"
                android:textSize="10sp"
                android:id="@+id/ButtonDisconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ButtonConnect"></Button>

            <EditText
                android:id="@+id/labelHeartRate"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:layout_below="@+id/ButtonConnect"
                android:layout_alignParentRight="true"></EditText>

            <TextView
                android:id = "@+id/HRTextBox"
                android:textSize="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ButtonConnect"
                android:text="Heart Rate"

                />
            <TextView
                android:id = "@+id/InstantSpeed"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelHeartRate"
                android:text="Instant Speed"
                android:textSize="10sp"
                />
            <EditText
                android:id="@+id/labelInstantSpeed"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:layout_below="@+id/labelHeartRate"
                android:layout_alignParentRight="true"></EditText>

            <TextView
                android:id = "@+id/StatusTextBox"
                android:layout_width="fill_parent"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelInstantSpeed"
                android:text="Status Message"

                />

            <EditText
                android:id="@+id/labelStatusMsg"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:text="Status Message Box"
                android:layout_below="@+id/StatusTextBox"
                android:layout_alignParentLeft="true"></EditText>


            <TextView
                android:id = "@+id/labelMACaddr"
                android:layout_width="fill_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/labelStatusMsg"
                android:text="MAC address"
                android:textSize="10sp"
                />


            <TextView
                android:id = "@+id/MACaddr"
                android:layout_width="fill_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/labelMACaddr"
                android:text="xx:xx:xx:xx:xx:xx"
                android:textSize="10sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Connection SetUp !"
                android:id="@+id/textView3"
                android:layout_alignBaseline="@+id/ButtonDisconnect"
                android:layout_alignBottom="@+id/ButtonDisconnect"
                android:layout_toStartOf="@+id/labelHeartRate" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/relativeLayout2"
        android:backgroundTint="#d1bebe"
        android:background="#c9bdbd"
        android:foreground="#b49090"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Set Alarm Time and Date !"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set alarm"
            android:id="@+id/setalarm"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add This Alarm"
            android:id="@+id/PushAlarm"
            android:layout_below="@+id/setalarm"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout2"
        android:backgroundTint="#f0c295">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List Of Alarms"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
